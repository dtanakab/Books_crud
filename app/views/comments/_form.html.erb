<%= form_with model: comment, local: true do |form| %>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <%= form.hidden_field :commentable_type, value: comment.commentable_type %>
  <%= form.hidden_field :commentable_id, value: comment.commentable_id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
