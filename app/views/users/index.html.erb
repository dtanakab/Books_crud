<%= link_to t('helpers.select.back_to_top'), books_path %>

<table>
  <thead>
    <tr>
      <th><%= t('helpers.user_column.iconimage') %></th>
      <th><%= t('helpers.user_column.username') %></th>
      <th><%= t('helpers.user_column.introduction') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.image, :size =>'50x50' if user.image.attached? %></td>
        <td><%= user.username %></td>
        <td><%= user.introduction %></td>
        <% if current_user.following?(user) %>
          <td>
            <%= form_for(current_user.active_relationships.find_by(followed_id: user.id),
               html: { method: :delete }, remote: true) do |f| %>
              <%= f.submit "Unfollow", class: "btn" %>
            <% end %>
          </td>
        <% else %>
          <td>
            <%= form_for(current_user.active_relationships.build, remote: true) do |f| %>
              <div><%= hidden_field_tag :followed_id, user.id %></div>
              <%= f.submit "Follow", class: "btn" %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>
