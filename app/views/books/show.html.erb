<h1>
  <%= t('helpers.column.impressions_of_book', book: @book.title ) %>
</h1>
<%= link_to t('helpers.select.back_to', page: "トップページ"), root_path %>
<p id="notice">
  <%= notice %>
</p>
<br><hr>
<p>
  <strong>
    <%= User.human_attribute_name(:username) %>:
  </strong>
  <%= link_to @book.user.username, @book.user %>
</p>

<p>
  <strong>
    <%= Book.human_attribute_name(:title) %>:
  </strong>
  <%= @book.title %>
</p>

<p>
  <strong>
    <%= Book.human_attribute_name(:memo) %>:
  </strong>
  <%= @book.memo %>
</p>

<p>
  <strong>
    <%= Book.human_attribute_name(:author) %>:
  </strong>
  <%= @book.author %>
</p>

<p>
  <strong>
    <%= Book.human_attribute_name(:picture) %>
  </strong>
  <%= image_tag @book.picture_url, size:'200x200' if @book.picture.present? %>
</p>
<% if @book.user == current_user %>
  <%= link_to t('helpers.select.Edit'), edit_book_path(@book) %> |
  <%= link_to t('helpers.select.Destroy'), @book, method: :delete, data: { confirm: t('messages.sure?') } %>
<% end %>
<br><hr>
