<p id="notice"><%= notice %></p>

<h1><%= t('helpers.column.Books') %></h1><br>
<% if user_signed_in? %>
  <%= link_to t('helpers.select.account_info'), user_path(current_user.id) %>
  <%= link_to t('helpers.select.account_index'), users_path %>
  <%= link_to t('helpers.select.logout'), destroy_user_session_path, method: :delete %>
  <table>
    <thead>
      <tr>
        <th><%= t('helpers.column.Title') %></th>
        <th><%= t('helpers.column.Memo') %></th>
        <th><%= t('helpers.column.Author') %></th>
        <th>画像</th>
        <th>投稿者名</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.memo %></td>
          <td><%= book.author %></td>
          <td><%= image_tag book.picture_url, :size => '50x50' if book.picture_url.present? %></td>
          <td><%= User.find(book.user_id).username %></td>
          <td><%= link_to t('helpers.select.Show'), book %></td>
          <td><%= link_to t('helpers.select.Edit'), edit_book_path(book) %></td>
          <td><%= link_to t('helpers.select.Destroy'), book, method: :delete, data: { confirm: t('messages.sure?') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to t('helpers.select.New Book'), new_book_path %><br><br>
<% else %>
  <%= link_to t('helpers.select.signup'), new_user_registration_path %>
  <%= link_to t('helpers.select.login'), new_user_session_path %>
<% end %>  
<br>
